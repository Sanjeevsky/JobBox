<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".employer.EmployerNewApplicationFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="80dp"
        android:gravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="4dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Title"
                android:id="@+id/created_applications_title"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:textSize="22dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:textSize="18dp"
                android:textStyle="bold"
                android:id="@+id/created_applications_industry"
                android:layout_marginBottom="2dp"
                android:text="Industry"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:text="Location: "/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:textSize="15dp"
                    android:id="@+id/created_applications_location"
                    android:text=""/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:text="Skillsets Required: "/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:textSize="15dp"
                    android:id="@+id/created_applications_skillset"
                    android:text=""/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:text="Experience Required: "/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:textSize="15dp"
                    android:id="@+id/created_applications_experience"
                    android:text=""/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:textStyle="bold"
                android:text="Details"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:id="@+id/created_applications_details"
                android:text="Details"
                android:layout_marginBottom="4dp"/>
        </LinearLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Change Status"
            android:id="@+id/created_applications_change_status_btn"
            android:textColor="#fff"
            android:background="@color/colorPrimary"/>

    </LinearLayout>


</FrameLayout>