<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="16dp"
    android:layout_marginTop="16dp"
    android:id="@+id/application_cardView"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:outlineAmbientShadowColor="@color/cardview_shadow_start_color"
    android:fitsSystemWindows="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="4dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Title"
            android:id="@+id/created_applications_title"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:textSize="22dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:textSize="18dp"
            android:textStyle="bold"
            android:id="@+id/created_applications_industry"
            android:layout_marginBottom="2dp"
            android:text="Industry"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:textSize="16dp"
                android:textStyle="bold"
                android:text="Location: "/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:textSize="15dp"
                android:id="@+id/created_applications_location"
                android:text=""/>
        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:text="Status: "/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:textSize="15dp"
                    android:id="@+id/created_applications_status"
                    android:text=""/>
            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:textSize="15dp"
                android:textStyle="bold"
                android:text="Skillsets Required: "/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:textSize="15dp"
                android:id="@+id/created_applications_skillset"
                android:text=""/>
        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:text="Experience Required: "/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:textSize="15dp"
                    android:id="@+id/created_applications_experience"
                    android:text=""/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:textStyle="bold"
                android:text="Details"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:id="@+id/created_applications_details"
            android:text="Details"
            android:layout_marginBottom="4dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Candidates"
                android:textStyle="bold"/>
            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:listitem="@layout/applied_candidate_recycler_layout"
                android:id="@+id/applied_candidate_recycler"/>
            </androidx.core.widget.NestedScrollView>
        </LinearLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Details"
            android:id="@+id/created_applications_change_status_btn"
            android:textColor="#fff"
            android:background="@color/colorPrimary"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>