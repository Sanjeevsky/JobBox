<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".employer.createdApplication.ViewSingleFragment">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="16dp"
            android:layout_marginTop="16dp"
            android:id="@+id/application_cardView"
            app:cardElevation="16dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:backgroundTint="#D0D0E6"
            android:outlineAmbientShadowColor="@color/cardview_shadow_start_color"
            android:fitsSystemWindows="true"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="4dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="Title"
                        android:id="@+id/created_applications_title"
                        android:textColor="@color/colorPrimaryDark"
                        android:textStyle="bold"
                        android:textSize="22dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:id="@+id/created_applications_industry"
                        android:layout_marginBottom="2dp"
                        android:text="Industry"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:text="Location: "/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:textSize="15dp"
                            android:id="@+id/created_applications_location"
                            android:text=""/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:textSize="15dp"
                            android:textStyle="bold"
                            android:text="Status: "/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:textSize="15dp"
                            android:id="@+id/created_applications_status"
                            android:text=""/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:textSize="15dp"
                            android:textStyle="bold"
                            android:text="Skillsets Required: "/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:textSize="15dp"
                            android:id="@+id/created_applications_skillset"
                            android:text=""/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:textSize="15dp"
                            android:textStyle="bold"
                            android:text="Experience Required: "/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:textSize="15dp"
                            android:id="@+id/created_applications_experience"
                            android:text=""/>
                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        android:text="Details"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:id="@+id/created_applications_details"
                        android:text="Details"
                        android:layout_marginBottom="4dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Candidates"
                        android:textStyle="bold"/>

                        <androidx.recyclerview.widget.RecyclerView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            tools:listitem="@layout/applied_candidate_recycler_layout"
                            android:id="@+id/applied_candidate_recycler"/>
                </LinearLayout>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Change Status"
                    android:id="@+id/created_applications_change_status_btn"
                    android:textColor="#fff"
                    android:background="@color/colorPrimary"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
        </ScrollView>
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/pBar_employee_single_fragment"
        android:visibility="gone"
        android:background="@color/blue_super_light">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/employee"
            android:layout_gravity="center"
            android:id="@+id/loading_image_single_fragment"
            android:visibility="visible"
            android:padding="40dp"/>
    </FrameLayout>

</FrameLayout>