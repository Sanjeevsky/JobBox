<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.devsanjeev.jobbox">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.devsanjeev.jobbox.GlobalClass"
        android:allowBackup="true"
        android:icon="@drawable/employee"
        android:label="@string/app_name"
        android:roundIcon="@drawable/employee"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".employer.EmployerActivity"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".employee.EmployeeActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".LoginActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".WelcomeActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity"
            android:screenOrientation="portrait"/>
    </application>

</manifest>